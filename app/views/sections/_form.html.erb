<%= error_messages_for(f.object)%>

<table summary="section form fields">
  <tr>
    <th>page_id</th>
    <td>
      <%# f.text_field(:page_id) %>
      <%= f.select(:page_id, @pages.map { |p| [p.name, p.id]}) %>
    </td>
  </tr>
  <tr>
    <th>Name</th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th>Position</th>
    <td>
      <%# f.text_field(:position) %>
      <%= f.select(:position, 1..@section_count) %>
    </td>
  </tr>
  <tr>
    <th>Visible</th>
    <%# f.text_field(:visible) %>
    <%# adding form helper  %>
    <td><%= f.check_box(:visible) %></td>  </tr>
  <tr>
    <th>Content type</th>
    <td>
      <%# f.text_field(:content_type) %>
      <%= f.radio_button(:content_type, 'text') %> Text
      <%= f.radio_button(:content_type, 'HTML') %> HTML
    </td>
  </tr>
  <tr>
    <th>Content</th>
    <td>
      <%# f.text_field(:content) %>
      <%= f.text_area(:content, :size => '40x10') %>
    </td>
  </tr>
</table>
