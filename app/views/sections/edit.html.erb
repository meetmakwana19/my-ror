<h1>Sections#edit</h1>
<p>Find me in app/views/sections/edit.html.erb</p>

<%= link_to("<< Back to List", sections_path, :class => "back-link")%>

<div class="sections edit">
    <h2>Update section</h2>

    <%# form_for helper for dynamic form for sections edit/new action so no need to specify the method and url It's smart enough to know that the @section object is new/saved. %>
    <%# form_for(@section, :url => sections_path, :method => "patch") do |f| %>
    <%= form_for(@section) do |f|%>

        <table summary="section form fields">
            <tr>
                <th>page_id</th>
                <td><%= f.text_field(:page_id) %></td>
            </tr>
            <tr>
                <th>Name</th>
                <td><%= f.text_field(:name) %></td>
            </tr>
            <tr>
                <th>Position</th>
                <td><%= f.text_field(:position) %></td>
            </tr>
            <tr>
                <th>Visible</th>
                <td><%= f.text_field(:visible) %></td>
            </tr>
            <tr>
                <th>Content type</th>
                <td><%= f.text_field(:content_type) %></td>
            </tr>
            <tr>
                <th>Content</th>
                <td><%= f.text_field(:content) %></td>
            </tr>
        </table>

        <div class="form-buttons">
            <%= f.submit("Update section")%>
        </div>
    <% end %>
</div>