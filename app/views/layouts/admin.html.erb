<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Sample CMS <%= @page_title || "Admin area" %></title>
    <%= stylesheet_link_tag("admin", :media => "all") %>
  </head>
  <body>
    <div id="header">
      <h1>Simple CMS Admin</h1>
    </div>
    <div id="main">
      <% if !flash[:notice].blank?%> <%# if notice is not blank then %>
      <div class="notice"><%= flash[:notice] %></div>
      <% end %>

      <div id="content">
        <!-- before yield -->
        <%= yield %>
        <!-- after yield -->
      </div>
      <div id="footer">
        <p id="copyright">&copy; lynda.com</p>
      </div>
    </div>
  </body>
</html>
