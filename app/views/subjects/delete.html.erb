<h1>Subjects#delete</h1>
<p>Find me in app/views/subjects/delete.html.erb</p>

<%= link_to("<< Back to List", subjects_path, :class => "back-link")%>

<div class="subjects delete">
    <h2>Delete Subject</h2>

    <%# form_for(@subject, :url => subjects_path, :method => "delete") do |f| %>
    <%= form_for(@subject, :method => "delete") do |f|%>
    <%# passing delete method is necessary here as by default edit will be considered by rails for the saved object and not delete. %>
        <p>Are you sure you want to permanently delete this subject ? </p>

        <p class="reference-name"><%= f.object.name %></p>
        <%# other way was to write @subject.name to get the name. %>

        <div class="form-buttons">
            <%= f.submit("Delete  Subject")%>
        </div>
    <% end %>
</div>