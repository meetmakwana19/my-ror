<table summary="Subject form fields">
  <tr>
    <th>Name</th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th>Position</th>
    <td>
      <%# f.text_field(:position) %>
      <%= f.select(:position, 1..@subject_count) %>
    </td>
  </tr>
  <tr>
    <th>Visible</th>
    <%# f.text_field(:visible) %>
    <%# adding form helper  %>
    <td><%= f.check_box(:visible) %></td>
  </tr>
</table>
