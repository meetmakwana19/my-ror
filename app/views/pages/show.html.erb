<h1>Pages#show</h1>
<p>Find me in app/views/pages/show.html.erb</p>

<%= link_to("Back to list", pages_path, :class => "back-link")%>

<div class="pages show">
    <h2>Show pages</h2>

    <table summary="page detail view">
        <tr>
            <th>ID</th>
            <td><%= @page.id %></td>
        </tr>
        <tr>
            <th>subject_id</th>
            <td><%= @page.subject_id %></td>
        </tr>
        <tr>
            <th>Name</th>
            <td><%= @page.name %></td>
        </tr>
        <tr>
            <th>Permalink</th>
            <td><%= @page.permalink %></td>
        </tr>
        <tr>
            <th>Position</th>
            <td><%= @page.position %></td>
        </tr>
        <tr>
            <th>Visible ?</th>
            <td><%= @page.visible ? "True" : "False" %></td>
        </tr>
        <tr>
            <th>Created at</th>
            <td><%= @page.created_at %></td>
        </tr>
        <tr>
            <th>Updated at</th>
            <td><%= @page.updated_at %></td>
        </tr>
    </table>
</div>