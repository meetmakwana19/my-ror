<%= error_messages_for(f.object)%>

<table summary="page form fields">
    <tr>
        <th>subject_id</th>
        <td>
            <%# f.text_field(:subject_id) %>
            <%= f.select(:subject_id, @subjects.map {|s| [s.name, s.id]}) %>
        </td>
    </tr>
    <tr>
        <th>Name</th>
        <td>
            <%= f.text_field(:name) %>
        </td>
    </tr>
    <tr>
    <tr>
        <th>Permalink</th>
        <td>
            <%= f.text_field(:permalink) %>
        </td>
    </tr>
    <th>Position</th>
    <td>
        <%# f.text_field(:position) %>
        <%= f.select(:position, 1..@page_count) %>
    </td>
    </tr>
    <tr>
        <th>Visible</th>
        <td>
            <%# f.text_field(:visible) %>
            <%= f.check_box(:visible) %>
        </td>
    </tr>
</table>